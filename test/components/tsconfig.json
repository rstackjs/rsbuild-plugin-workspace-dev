{
  "compilerOptions": {
    "composite": true,
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "paths": {
      "@/*": ["./src/*"],
      "@card/*": ["./src/card/*"]
    },
    "rootDir": "src",
    "outDir": "./dist"
  },
  "include": ["src"]
}
